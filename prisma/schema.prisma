generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Setting {
  key   String @id
  value String
}

model Player {
  id         Int         @id
  name       String
  ascensions Ascension[]
}

model Ascension {
  ascensionNumber    Int
  player             Player    @relation(fields: [playerId], references: [id])
  playerId           Int
  date               DateTime
  dropped            Boolean
  abandoned          Boolean
  level              Int
  className          String
  class              Class     @relation(fields: [className], references: [name])
  sign               String
  turns              Int
  days               Int
  familiar           String
  familiarPercentage Float
  lifestyle          Lifestyle
  pathName           String
  path               Path      @relation(fields: [pathName], references: [name])
  extra              Json
  tags               Tag[]

  @@id(name: "id", [ascensionNumber, playerId])
  @@index([pathName], type: Hash)
  @@index([days, turns])
}

enum Lifestyle {
  CASUAL
  SOFTCORE
  HARDCORE
}

model Path {
  name       String      @id
  slug       String      @unique
  start      DateTime?
  end        DateTime?
  id         Int?        @unique
  image      String?
  seasonal   Boolean     @default(true)
  ascensions Ascension[]
  class      Class[]
}

model Class {
  name      String      @id
  id        Int?
  image     String?
  path      Path?       @relation(fields: [pathId], references: [id])
  pathId    Int?
  Ascension Ascension[]
}

enum TagType {
  RECORD_BREAKING
  PERSONAL_BEST
  LEADERBOARD
  PYRITE
  LEADERBOARD_SPECIAL
  PYRITE_SPECIAL
}

model Tag {
  type            TagType
  value           Int?
  ascension       Ascension @relation(fields: [ascensionNumber, playerId], references: [ascensionNumber, playerId])
  ascensionNumber Int
  playerId        Int

  @@id([type, ascensionNumber, playerId])
}
