generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id         Int         @id
  name       String
  ascensions Ascension[]
}

model Ascension {
  ascensionNumber    Int
  player             Player    @relation(fields: [playerId], references: [id])
  playerId           Int
  date               DateTime
  dropped            Boolean
  abandoned          Boolean
  level              Int
  class              String
  sign               String
  turns              Int
  days               Int
  familiar           String
  familiarPercentage Float
  lifestyle          Lifestyle
  pathName           String
  path               Path      @relation(fields: [pathName], references: [name])
  recordBreaking     Boolean   @default(false)
  extra              Json

  @@id(name: "id", [ascensionNumber, playerId])
  @@index([pathName], type: Hash)
  @@index([days, turns])
}

enum Lifestyle {
  CASUAL
  SOFTCORE
  HARDCORE
}

model Path {
  name       String      @id
  slug       String      @unique
  start      DateTime?
  end        DateTime?
  id         Int?
  image      String?
  seasonal   Boolean     @default(true)
  ascensions Ascension[]
}
